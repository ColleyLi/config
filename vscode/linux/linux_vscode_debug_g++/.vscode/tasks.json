{
    // 有关 tasks.json 格式的文档，请参见
    // https://go.microsoft.com/fwlink/?LinkId=733558
        "version": "2.0.0",
        "tasks": [
            {
                "type": "shell",
                "label": "test",                                // task 的标签 必须与 launch.json文件中的 preLaunchTask名字一致
                "command": "/usr/bin/g++",
                "args": [                                       // build 的时候参数
                    "-g",
                    "${file}",
                    "-o",
                    "${fileDirname}/${fileBasenameNoExtension}",
                    "-l",
                    "pthread"
    ​
                ],
                "options": {
                    "cwd": "/usr/bin"
                },
                "problemMatcher": [
                    "$gcc"
                ]
            }
        ]
}